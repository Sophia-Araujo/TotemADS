@model TotemPWA.Models.Produto

@{
    ViewData["Title"] = "Excluir Produto";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

<div class="content-area">
    <div class="produtos-section">
        <div class="section-header">
            <div class="header-content">
                <h1>Excluir Produto</h1>
                <p class="section-subtitle">Tem certeza que deseja excluir este produto?</p>
            </div>
        </div>

        <div class="form-container">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="ProdutoId" />
                
                <div class="form-group">
                    <label>Imagem do Produto</label>
                    @if (Model.Imagem != null && Model.Imagem.Length > 0)
                    {
                        <img src="@Url.Action("ExibirImagem", new { id = Model.ProdutoId })" 
                             alt="@Model.Nome" 
                             id="imagePreview"
                             style="max-width: 200px; max-height: 200px; border: 1px solid #ddd; border-radius: 5px;" />
                    }
                    else
                    {
                        <p class="form-text text-muted">Nenhuma imagem cadastrada</p>
                    }
                </div>

                <div class="form-group">
                    <label>Nome</label>
                    <p class="form-text">@Model.Nome</p>
                </div>

                <div class="form-group">
                    <label>Descrição</label>
                    <p class="form-text">@Model.Descricao</p>
                </div>

                <div class="form-group">
                    <label>Valor</label>
                    <p class="form-text">R$ @Model.Valor.ToString("F2")</p>
                </div>

                <div class="form-group">
                    <label>É Combo?</label>
                    <p class="form-text">@(Model.IsCombo == 1 ? "Sim" : "Não")</p>
                </div>

                <div class="form-group">
                    <label>Administrador</label>
                    <p class="form-text">@Model.Administrador?.CPF</p>
                </div>

                <div class="form-group">
                    <label>Categoria</label>
                    <p class="form-text">@Model.Categoria?.CategoriaId</p>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Confirmar Exclusão" class="btn btn-danger" />
                </div>
            </form>

            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="~/css/deleteproduto.css" />
}