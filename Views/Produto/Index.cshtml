@model IEnumerable<TotemPWA.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Produtos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar Novo Produto</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Imagem
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsCombo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Administrador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @if (item.Imagem != null && item.Imagem.Length > 0)
                {
                    <img src="@Url.Action("ExibirImagem", new { id = item.ProdutoId })" 
                         alt="@item.Descricao" 
                         style="width: 50px; height: 50px; object-fit: cover; border-radius: 5px;" />
                }
                else
                {
                    <span class="text-muted">Sem imagem</span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                R$ @item.Valor.ToString("F2")
            </td>
            <td>
                @(item.IsCombo == 1 ? "Sim" : "Não")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Administrador.CPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.CategoriaId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProdutoId" class="btn btn-sm btn-warning">Editar</a>
                <a asp-action="Details" asp-route-id="@item.ProdutoId" class="btn btn-sm btn-info">Detalhes</a>
                <a asp-action="Delete" asp-route-id="@item.ProdutoId" class="btn btn-sm btn-danger">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>