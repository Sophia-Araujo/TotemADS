@model IEnumerable<TotemPWA.Models.Produto>

@{
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
    ViewData["Title"] = "Produtos";
}

@section Styles {
    <link rel="stylesheet" href="~/css/crudproduto.css" />
}

<div class="content-area">
    <div class="produtos-section">
        <div class="admin-section">
            <div class="section-header">
                <div class="header-content">
                    <h1>Produtos</h1>
                    <p class="section-subtitle">Gerencie todos os produtos cadastrados</p>
                </div>
                <div class="header-actions">
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="icon-plus"></i>
                        Novo Produto
                    </a>
                </div>
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table-custom">
                        <thead>
                            <tr>
                                <th>Imagem</th>
                                <th>Nome</th>
                                <th>Preço</th>
                                <th>Combo</th>
                                <th>Criado por</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@Url.Action("ExibirImagem", new { id = item.ProdutoId })" alt="@item.Nome"
                                            class="product-table-image" />
                                    </td>
                                    <td>@item.Nome</td>
                                    <td>R$ @item.Valor.ToString("F2")</td>
                                    <td>@(item.IsCombo == 1 ? "Sim" : "Não")</td>
                                    <td>@item.Administrador?.CPF</td>
                                    <td class="actions-cell">
                                        <a asp-action="Edit" asp-route-id="@item.ProdutoId" class="btn btn-warning btn-sm"
                                            title="Editar">
                                            Editar
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.ProdutoId" class="btn btn-info btn-sm"
                                            title="Detalhes">
                                            Detalhes
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.ProdutoId" class="btn btn-danger btn-sm"
                                            title="Excluir">
                                            Excluir
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
          
        }
        else
        {
            <div class="empty-state">
                <h3>Nenhum produto encontrado</h3>
                <p>Adicione produtos ao sistema</p>
                <a asp-action="Create" class="btn btn-primary">Criar Primeiro Produto</a>
            </div>
        }
          </div>
    </div>
</div>
