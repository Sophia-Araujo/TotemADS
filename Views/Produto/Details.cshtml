@model TotemPWA.Models.Produto

@{
    ViewData["Title"] = "Detalhes do Produto";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

<div class="content-area">
    <div class="produtos-section">
        <div class="section-header">
            <div class="header-content">
                <h1>Detalhes do Produto</h1>
                <p class="section-subtitle">Visualize as informações completas do produto</p>
            </div>
        </div>

        <div class="details-container">
            <dl class="row">
                <dt class="col-sm-3">Imagem</dt>
                <dd class="col-sm-9">
                    @if (Model.Imagem != null && Model.Imagem.Length > 0)
                    {
                        <img src="@Url.Action("ExibirImagem", new { id = Model.ProdutoId })" 
                             alt="@Model.Nome" 
                             id="imagePreview"
                             />
                    }
                    else
                    {
                        <span class="text-muted">Nenhuma imagem cadastrada</span>
                    }
                </dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nome)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Descricao)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Descricao)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Valor)</dt>
                <dd class="col-sm-9">R$ @Model.Valor.ToString("F2")</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.IsCombo)</dt>
                <dd class="col-sm-9">@((Model.IsCombo == 1) ? "Sim" : "Não")</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Administrador)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Administrador.CPF)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Categoria)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Categoria.CategoriaId)</dd>
            </dl>

            <div class="btn-group text-center mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.ProdutoId" class="btn btn-warning">Editar</a>
                <a asp-action="Index" class="btn btn-secondary">Voltar para Lista</a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/detailsproduto.css" />
}