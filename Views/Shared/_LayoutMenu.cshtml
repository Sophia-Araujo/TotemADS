<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/stylemeuadm.css" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="container-principal">
        <div class="menu-lateral">
            <div class="logo">
                <img src="~/image/logos/logo_dsburguer.png" alt="ADS Burguer System" style="max-width: 180px;" />
            </div>

            <ul class="menu">
                <li><a asp-controller="Home" asp-action="Index">Tela Inicial ➜</a></li>
                <li><a asp-controller="Produto" asp-action="Index">Produtos ➜</a></li>
                <li><a asp-controller="Cupom" asp-action="Index">Cupons ➜</a></li>
                <li><a asp-controller="Administrador" asp-action="Index">Administrador ➜</a></li>
                <li><a asp-controller="Ingrediente" asp-action="Index">Ingrediente ➜</a></li>
                <li><a asp-controller="Categoria" asp-action="Index">Categoria ➜</a></li>

            </ul>

            <div class="usuario">
                <div class="circulo"></div>
                <span>Olá, Admin!</span>
            </div>
        </div>

        <div class="conteudo">
            @RenderBody()
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
