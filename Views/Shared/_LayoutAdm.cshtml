<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TotemPWA</title>
    <link rel="stylesheet" href="~/css/loginadm.css" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="container">
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="user-info">
                        <span>Bem-vindo, @User.Identity.Name!</span>
                        <a asp-controller="Administrador" asp-action="Logout" class="btn-logout">Sair</a>
                    </div>
                }
            </div>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>