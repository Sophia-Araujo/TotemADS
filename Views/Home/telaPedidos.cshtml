@{
    Layout = "_LayoutPedidos";
}
<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cardápio</title>
    <link rel="stylesheet" href="./css/pedidos.css">
</head>

<body>
    <header>
        <img src="/image/banners/lanchesBanner.png" id="banner-image" alt="Banner de Hambúrguer">
    </header>

    <main>
        <aside class="sidebarlateral">
            <button class="category active" data-category="lanches">
                <img src="/image/sidebar/lanche.png" alt="Lanches">
                <span>Lanches</span>
            </button>
            <button class="category" data-category="combos">
                <img src="/image/sidebar/combo.png" alt="Combos">
                <span>Combos</span>
            </button>
            <button class="category" data-category="sobremesas">
                <img src="/image/sidebar/milkshake.png" alt="Sobremesas">
                <span>Sobremesas</span>
            </button>
            <button class="category" data-category="bebidas">
                <img src="/image/sidebar/bebidas.png" alt="Bebidas">
                <span>Bebidas</span>
            </button>
            <button class="category" data-category="extras">
                <img src="/image/sidebar/extras.png" alt="Extras">
                <span>Extras</span>
            </button>
            <button class="category" data-category="promocoes">
                <img src="/image/sidebar/promocao.png" alt="Promoções">
                <span>Promoções</span>
            </button>
        </aside>

        <!-- SIDEBAR DE FILTRO -->
        <aside class="sidebar">
            <button class="cate">
                <span>CARNE</span>
            </button>
            <button class="cate">
                <span>ESPECIAIS</span>
            </button>
            <button class="cate">
                <span>FRANGO</span>
            </button>
            <button class="cate">
                <span>VEGETARIANOS</span>
            </button>
            <button class="cate">
                <span>VEGANOS</span>
            </button>
        </aside>

        <section class="content">

            <!-- LANCHES -->
            <div class="menu-section" id="lanches">
                <h2>Lanches</h2>
                <div class="menu">
                    <div class="card">
                        <img src="/image/produtos/lanches/404 Not Found Burger.png" alt="Burger 404">
                        <h3>Burger 404</h3>
                        <p>R$ 24,90</p>
                        <p>Pão brioche, queijo cheddar cremoso...</p>
                        <button class="add-to-cart">Adicionar</button>
                    </div>

                    <div class="card">
                        <img src="/image/produtos/lanches/404 Not Found Burger.png" alt="Burger 404">
                        <h3>Burger 404</h3>
                        <p>R$ 24,90</p>
                        <p>Pão brioche, queijo cheddar cremoso...</p>
                        <button class="add-to-cart">Adicionar</button>
                    </div>

                    <div class="card">
                        <img src="/image/produtos/lanches/404 Not Found Burger.png" alt="Burger 404">
                        <h3>Burger 404</h3>
                        <p>R$ 24,90</p>
                        <p>Pão brioche, queijo cheddar cremoso...</p>
                        <button class="add-to-cart">Adicionar</button>
                    </div>

                    <div class="card">
                        <img src="/image/produtos/lanches/404 Not Found Burger.png" alt="Burger 404">
                        <h3>Burger 404</h3>
                        <p>R$ 24,90</p>
                        <p>Pão brioche, queijo cheddar cremoso...</p>
                        <button class="add-to-cart">Adicionar</button>
                    </div>

                    <div class="card">
                        <img src="/image/produtos/lanches/404 Not Found Burger.png" alt="Burger 404">
                        <h3>Burger 404</h3>
                        <p>R$ 24,90</p>
                        <p>Pão brioche, queijo cheddar cremoso...</p>
                        <button class="add-to-cart">Adicionar</button>
                    </div>

                    <div class="card">
                        <img src="/image/produtos/lanches/404 Not Found Burger.png" alt="Burger 404">
                        <h3>Burger 404</h3>
                        <p>R$ 24,90</p>
                        <p>Pão brioche, queijo cheddar cremoso...</p>
                        <button class="add-to-cart">Adicionar</button>
                    </div>

                    <div class="card">
                        <img src="/image/produtos/lanches/404 Not Found Burger.png" alt="Burger 404">
                        <h3>Burger 404</h3>
                        <p>R$ 24,90</p>
                        <p>Pão brioche, queijo cheddar cremoso...</p>
                        <button class="add-to-cart">Adicionar</button>
                    </div>
                </div>
            </div>

            <!-- COMBOS -->
            <div class="menu-section" id="combos">
                <h2>Combos</h2>
                <div class="menu">
                    <div class="card">
                        <img src="/image/produtos/combos/Combo Bug Hunter.png" alt="Combo Clássico">
                        <h3>Combo Clássico</h3>
                        <p>R$ 39,90</p>
                        <p>Hambúrguer + Batata + Refrigerante</p>
                        <button class="add-to-cart">Adicionar</button>
                    </div>
                </div>
            </div>

            <!-- SOBREMESAS -->
            <div class="menu-section" id="sobremesas">
                <h2>Sobremesas</h2>
                <div class="menu">
                    <div class="card">
                        <img src="/image/produtos/sobremesas/Async Await Shake.png" alt="Milkshake Chocolate">
                        <h3>Milkshake Chocolate</h3>
                        <p>R$ 12,90</p>
                        <p>Delicioso milkshake de chocolate cremoso.</p>
                        <button class="add-to-cart">Adicionar</button>
                    </div>
                </div>
            </div>

            <!-- BEBIDAS -->
            <div class="menu-section" id="bebidas">
                <h2>Bebidas</h2>
                <div class="menu">
                    <div class="card">
                        <img src="/image/produtos/bebidas/agua.png" alt="Refrigerante">
                        <h3>Refrigerante</h3>
                        <p>R$ 6,00</p>
                        <p>Lata 350ml, diversos sabores.</p>
                        <button class="add-to-cart">Adicionar</button>
                    </div>
                </div>
            </div>

            <!-- EXTRAS -->
            <div class="menu-section" id="extras">
                <h2>Extras</h2>
                <div class="menu">
                    <div class="card">
                        <img src="/image/produtos/extras/ession Bacon.png" alt="Batata Frita">
                        <h3>Batata Frita</h3>
                        <p>R$ 8,00</p>
                        <p>Porção média de batata frita crocante.</p>
                        <button class="add-to-cart">Adicionar</button>
                    </div>
                </div>
            </div>

            <!-- PROMOÇÕES -->
            <div class="menu-section final" id="promocoes">
                <h2>Promoções</h2>
                <div class="menu">
                    <div class="card">
                        <img src="/image/produtos/combos/promocao.png" alt="Promoção do Dia">
                        <h3>Promoção do Dia</h3>
                        <p>R$ 19,90</p>
                        <p>Lanche especial com desconto!</p>
                        <button class="add-to-cart">Adicionar</button>
                    </div>
                </div>
            </div>

        </section>

        <!-- POPUP INGREDIENTES -->
        <div id="popup" class="popup-overlay" style="display: none;">
            <div class="popup-content">
                <h2>C# burguer</h2>
                <p class="descricao-burguer">Pão, carne, alface, tomate, bacon, cebola e maionese.</p>

                <div class="popup-main">
                    <img src="/image/produtos/lanches/404 Not Found Burger.png" alt="C# Burguer" class="popup-img">

                    <div class="ingredientes">
                        <div class="ingrediente">
                            <span>Pão</span>
                            <span class="quantidade">1x</span>
                            <button class="menos">−</button>
                            <button class="mais">+</button>
                        </div>
                        <div class="ingrediente">
                            <span>Carne</span>
                            <span class="quantidade">1x</span>
                            <button class="menos">−</button>
                            <button class="mais">+</button>
                        </div>
                        <div class="ingrediente">
                            <span>Alface</span>
                            <span class="quantidade">1x</span>
                            <button class="menos">−</button>
                            <button class="mais">+</button>
                        </div>
                        <div class="ingrediente">
                            <span>Tomate</span>
                            <span class="quantidade">1x</span>
                            <button class="menos">−</button>
                            <button class="mais">+</button>
                        </div>
                        <div class="ingrediente">
                            <span>Bacon</span>
                            <span class="quantidade">1x</span>
                            <button class="menos">−</button>
                            <button class="mais">+</button>
                        </div>
                        <div class="ingrediente">
                            <span>Cebola</span>
                            <span class="quantidade">1x</span>
                            <button class="menos">−</button>
                            <button class="mais">+</button>
                        </div>
                        <div class="ingrediente">
                            <span>Maionese</span>
                            <span class="quantidade">1x</span>
                            <button class="menos">−</button>
                            <button class="mais">+</button>
                        </div>
                    </div>
                </div>

                <div class="popup-buttons">
                    <button id="voltar" class="btn-voltar">Voltar</button>
                    <button class="btn-adicionar-popup">Adicionar</button>
                </div>
            </div>
        </div>

        <footer class="resumo-compra">
            <div class="resumo">
                <p>Lanches 2x <span>R$: 73,80</span></p>
                <p>Bebidas 1x <span>R$: 10,00</span></p>
                <p>Sobremesas 2x <span>R$: 15,90</span></p>
                <p class="total">Total: <span>R$: 99,70</span></p>
            </div>
            <div class="acoes">
                <button class="btn-editar">Editar pedido</button>
                <button class="btn-pagar" onclick="window.location.href='/Home/telaItensPedidos'">Pagar R$:
                    83,80</button>
                <button class="btn-cancelar">Cancelar</button>
            </div>
        </footer>

        <script src="/js/script.js"></script>
</body>

</html>
