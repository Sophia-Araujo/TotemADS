<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Selecione uma opção</title>
  <link rel="stylesheet" href="~/cssescolha.css">
</head>
<body>
  <header class="top-bar"></header>

  <section class="logo-section">
    <div class="logo">
      <!-- Aqui você pode colocar sua imagem -->
      <img src="logo.png" alt="Logo ADS" />
    </div>
  </section>

  <main class="container">
    <h2>Selecione uma opção:</h2>
    <div class="options">
      <div class="option" id="viagem">
        <img src="bag-icon.png" alt="Para viagem" />
        <p>Para viagem</p>
      </div>
      <div class="option" id="aqui">
        <img src="tray-icon.png" alt="Comer aqui" />
        <p>Comer aqui</p>
      </div>
    </div>
    <button class="confirm-button">Confirmar</button>
  </main>

  <script>
    const options = document.querySelectorAll('.option');

    options.forEach(option => {
      option.addEventListener('click', () => {
        options.forEach(o => o.classList.remove('selected'));
        option.classList.add('selected');
      });
    });
  </script>
</body>
</html>
