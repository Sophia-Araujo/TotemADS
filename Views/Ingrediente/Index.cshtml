@model IEnumerable<TotemPWA.Models.Igrediente>

@{
    Layout = "_LayoutMenu";
}

<div class="content-area">
    <div class="ingredientes-section">
        <div class="section-header">
            <div class="header-content">
                <h1>Ingredientes</h1>
                <p class="section-subtitle">Gerencie os ingredientes do seu cardápio</p>
            </div>
            <a asp-action="Create" class="btn btn-primary">
                <span class="icon-plus"></span>
                + Novo Ingrediente
            </a>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">
                <strong>Erro:</strong> @ViewBag.Error
            </div>
        }

        @if (Model != null && Model.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Imagem</th>
                        <th>Nome</th>
                        <th>Preço</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td data-label="Imagem">
                                @if (item.Imagem != null)
                                {
                                    <img src="@Url.Action("GetImagem", "Ingrediente", new { id = item.IgredienteId })"
                                         alt="@item.Nome"
                                         class="ingrediente-imagem" />
                                }
                                else
                                {
                                    <div class="sem-imagem">
                                        Sem imagem
                                    </div>
                                }
                            </td>
                            <td data-label="Nome">
                                <h3 class="ingrediente-nome">@Html.DisplayFor(modelItem => item.Nome)</h3>
                            </td>
                            <td data-label="Preço">
                                <span class="ingrediente-valor">R$ @Html.DisplayFor(modelItem => item.Valor)</span>
                            </td>
                            <td data-label="Ações">
                                <a asp-action="Edit" asp-route-id="@item.IgredienteId" class="btn-action btn-edit btn-sm">
                                    Editar
                                </a>
                                <a asp-action="Info" asp-route-id="@item.IgredienteId" class="btn-action btn-info btn-sm">
                                    Detalhes
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.IgredienteId" class="btn-action btn-delete btn-sm">
                                    Excluir
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-icon">🥕</div>
                <h3>Nenhum ingrediente cadastrado</h3>
                <p>Comece adicionando seu primeiro ingrediente ao sistema</p>
                <a asp-action="Create" class="btn btn-primary">
                    <span class="icon-plus"></span>
                    Adicionar Primeiro Ingrediente
                </a>
            </div>
        }
    </div>
</div>

@section Styles{
    <link rel="stylesheet" href="~/css/crud-ingredientes.css"/>
}
