@model TotemPWA.Models.Administrador

@{
    ViewData["Title"] = "Detalhes do Administrador";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

<div class="content-area">
    <div class="produtos-section">
        <div class="section-header">
            <div class="header-content">
                <h1>Detalhes do Administrador</h1>
                <p class="section-subtitle">Visualize as informações completas do administrador</p>
            </div>
        </div>

        <div class="details-container">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nome)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Senha)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Senha)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CPF)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CPF)</dd>
            </dl>

            <div class="btn-group text-center mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.AdministradorId" class="btn btn-warning">Editar</a>
                <a asp-action="Index" class="btn btn-secondary">Voltar para Lista</a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/detailsadm.css" />
}
