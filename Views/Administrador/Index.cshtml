@model IEnumerable<TotemPWA.Models.Administrador>

@{
    ViewData["Title"] = "Administradores";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

<div class="content-area">
    <div class="admin-section">
        <div class="section-header">
            <h1>Administradores</h1>
            <p class="section-subtitle">Lista de administradores cadastrados</p>
            <a asp-action="Create" class="btn btn-primary btn-create">+ Criar Novo</a>
        </div>

        <div class="table-responsive">
            <table class="table-custom">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().Nome)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Email)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Senha)</th>
                        <th>@Html.DisplayNameFor(model => model.First().CPF)</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.Senha)</td>
                            <td>@Html.DisplayFor(modelItem => item.CPF)</td>
                            <td class="actions-cell">
                                <a asp-action="Edit" asp-route-id="@item.AdministradorId" class="btn btn-warning btn-sm">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.AdministradorId" class="btn btn-info btn-sm">Detalhes</a>
                                <a asp-action="Delete" asp-route-id="@item.AdministradorId" class="btn btn-danger btn-sm">Excluir</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/crudadm.css" />
}
